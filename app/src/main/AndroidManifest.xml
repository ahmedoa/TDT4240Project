<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.g4.progark.battleships" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".controllers.menus.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.menus.MainMenu"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
        <!-- Changing this, you can set the default theme. Themes can be created. -->

            <!-- Set to "landscape" to change default orientation -->
        </activity>
        <activity
            android:name=".controllers.menus.GameMode"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" > <!-- Set to "landscape" to change orientation -->
        </activity>
        <activity
            android:name=".controllers.menus.FirepowerActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" > <!-- Set to "landscape" to change orientation -->
        </activity>
        <activity
            android:name=".controllers.menus.GameModeListActivity"
            android:label="@string/title_activity_game_mode_list" >
        </activity>
        <activity
            android:name=".controllers.menus.AdvancedGameSetupActivity"
            android:label="@string/title_activity_game_mode_list" >
        </activity>
        <activity
            android:name=".controllers.menus.GameMapSelectionListActivity"
            android:label="@string/title_activity_game_map_selection_list" >
        </activity>
        <activity
            android:name=".controllers.menus.GameViewActivity"
            android:label="@string/title_activity_game_view" >
        </activity>
        <activity
            android:name=".controllers.menus.WinningActivity"
            android:label="@string/title_activity_game_view" >
        </activity>
        <activity
            android:name=".controllers.menus.IntermediateActivity"
            android:label="@string/title_activity_intermediate" >
        </activity>
        <activity
            android:name=".controllers.menus.ShipSelectionActivity"
            android:label="@string/title_activity_ship_selection" >
        </activity>
        <activity
            android:name=".controllers.menus.ShipPlacementActivity"
            android:label="Grid to place ship" >>
        </activity>
    </application>

</manifest>
