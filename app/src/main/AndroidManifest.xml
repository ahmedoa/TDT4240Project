<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.g4.progark.battleships" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".menus.MainMenu"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"> <!-- Changing this, you can set the default theme. Themes can be created. -->
            android:screenOrientation="portrait"> <!-- Set to "landscape" to change default orientation -->
        </activity>
        <activity
            android:name=".menus.GameMode"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"> <!-- Set to "landscape" to change orientation -->
        </activity>
        <activity
            android:name=".menus.Lobby"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"> <!-- Set to "landscape" to change orientation -->
        </activity>
        <activity
            android:name=".menus.OptionsMenu"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"> <!-- Set to "landscape" to change orientation -->
        </activity>



    </application>

</manifest>
